{
  "name": "@entropic-bond/menu-bar",
  "type": "module",
  "version": "2.2.1",
  "description": "Menu bar for React",
  "main": "lib/entropic-bond-menu-bar.umd.cjs",
  "module": "lib/entropic-bond-menu-bar.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/entropic-bond-menu-bar.js",
      "require": "./lib/entropic-bond-menu-bar.umd.cjs"
    }
  },
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "test": "vitest",
    "build": "tsc -p tsconfig-build.json && vite build",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropic-bond/menu-bar.git"
  },
  "keywords": [
    "menu",
    "react"
  ],
  "author": "Josep Seto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropic-bond/menu-bar/issues"
  },
  "homepage": "https://github.com/entropic-bond/menu-bar#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "git-branch-is": "^4.0.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  },
  "husky": {
    "hooks": {
      "pre-push": "if git-branch-is master; then npm test; fi"
    }
  }
}
